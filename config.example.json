{
  "includePatterns": ["**/*.md"],
  "excludePatterns": [
    "_archive/**",
    ".obsidian/**",
    ".trash/**",
    "node_modules/**",
    "**/node_modules/**",
    ".git/**",
    "_assets/**"
  ],
  "enableWrite": true,
  "vectorSearch": {
    "enabled": true,
    "provider": "transformers",
    "model": "Xenova/all-MiniLM-L6-v2",
    "indexOnStartup": false
  },
  "searchOptions": {
    "maxResults": 20,
    "excerptLength": 200,
    "caseSensitive": false,
    "includeMetadata": true
  },
  "logging": {
    "level": "info",
    "file": "logs/mcp-server.log"
  }
}
