    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "clean": "rimraf dist"
  },
  "keywords": [
    "obsidian",
    "claude",
    "mcp",
    "model-context-protocol",
    "knowledge-management",
    "ai",
    "llm"
