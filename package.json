  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^4.0.3",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "vectra": "^0.11.1",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
